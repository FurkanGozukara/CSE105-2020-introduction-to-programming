<Window x:Class="lecture_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lecture_7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox Name="cmbUserTitles" HorizontalAlignment="Left" Margin="22,24,0,0" VerticalAlignment="Top" Width="219" Height="43"/>
        <Button x:Name="btnShowSelectedItemValue" Content="Show selected user authority level" HorizontalAlignment="Left" Margin="296,24,0,0" VerticalAlignment="Top" Height="43" Width="262" Click="btnShowSelectedItemValue_Click"/>
        <ComboBox Name="cmbNumberCount" HorizontalAlignment="Left" Margin="22,113,0,0" VerticalAlignment="Top" Width="219" Height="49"/>
        <Button Name="btnWriteRandomNumbers" Content="Write selected number of random numbers to the file" HorizontalAlignment="Left" Margin="296,118,0,0" VerticalAlignment="Top" Height="44" Width="360" Click="btnWriteRandomNumbers_Click"/>
        <Button x:Name="btnFileReadingExamples" Content="File Reading Examples" HorizontalAlignment="Left" Margin="296,202,0,0" VerticalAlignment="Top" Height="50" Width="360" Click="btnFileReadingExamples_Click"/>

    </Grid>
</Window>
